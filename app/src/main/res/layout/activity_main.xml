<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/black"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covid Tracker"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kenya"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_baseline_arrow_drop"
            />
        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated on January 25, 2022"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnCount="2">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_marginStart="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:padding="12dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/yellow"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="confirmed"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/totalconfirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54098666"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />
                    <TextView
                        android:id="@+id/confirmedToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+32)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_marginStart="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:padding="12dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/purple_500"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="active"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/ActiveCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54098666"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:strokeColor="@color/black"
                android:elevation="12dp"
                app:strokeWidth="1dp"
                android:layout_marginStart="10dp"
                android:padding="12dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/teal_200"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="recovered"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/recovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54098666"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />
                    <TextView
                        android:id="@+id/recoveredToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+32)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:strokeColor="@color/black"
                android:padding="12dp"
                android:elevation="12dp"
                android:layout_marginStart="10dp"
                app:strokeWidth="1dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/totalDeaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54098666"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />
                    <TextView
                        android:id="@+id/deathsToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+32)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:strokeColor="@color/black"
                android:padding="12dp"
                android:elevation="12dp"
                android:layout_marginStart="10dp"
                app:strokeWidth="1dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/purple_700"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/totalTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54098666"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />
                    <TextView
                        android:id="@+id/todayTests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+32)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"

                        />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>